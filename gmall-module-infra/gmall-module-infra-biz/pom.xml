            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.zp</groupId>
            <artifactId>gmall-module-infra-api</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- 业务组件 -->
        <dependency>
            <groupId>com.zp</groupId>
            <artifactId>gmall-spring-boot-starter-banner</artifactId>
        </dependency>
        <dependency>
            <groupId>com.zp</groupId>
